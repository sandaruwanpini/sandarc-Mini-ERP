@using ERP.CSharpLib

@{
    ViewBag.Title = "ItemHistory";
}

<link href="~/Content/Custom/Report/ItemHistory.css" rel="stylesheet" />
<script src="~/Scripts/Custom/Report/Stock/ItemHistory.js"></script>

<div class="page-inner w100">
    <div class="row">
        <div class="col-md-6 offset-2 text-right text-center">
            <div class="main-card card">
                <div class="card-header">
                    <div class="d-flex align-items-center">
                        <h4 class="card-title"> Item History </h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="col-md-12 form-horizontal">
                        <div class="form-group form-inline control-group">
                            <label class="col-md-3 ">Date From</label>
                            <div class="col-md-8">
                                @Html.TextBox("DateFrom", null, new { @class = "form-control datePicker input-full", @placeholder = "MM/DD/YYYY", @Value = @UTCDateTime.BDDate().ToString("MM/dd/yyyy") })
                            </div>
                        </div>

                        <div class="form-group form-inline control-group">
                            <label class="col-md-3">Date To</label>
                            <div class="col-md-8">
                                @Html.TextBox("DateTo", null, new { @class = "form-control datePicker input-full", @placeholder = "MM/DD/YYYY", @Value = @UTCDateTime.BDDate().ToString("MM/dd/yyyy") })
                            </div>
                        </div>

                        <div class="form-group form-inline control-group">
                            <label class="col-md-3">Branch</label>
                            <div class="col-md-8">
                                @Html.DropDownList("Branch", new SelectList("", ""), new { @class = "form-control input-full", @Multiple = "multiple" })
                            </div>
                        </div>

                        <div class="form-group form-inline control-group">
                            <label class="col-md-3">Category</label>
                            <div class="col-md-8">
                                @Html.DropDownList("Category", new SelectList("", ""), new { @class = "form-control input-full" })
                            </div>
                        </div>

                        <div class="form-group form-inline control-group">
                            <label class="col-md-3">Product</label>
                            <div class="col-md-8">
                                @Html.DropDownList("Product", new SelectList("", ""), new { @class = "form-control input-full" })
                            </div>
                        </div>

                        <div class="form-group form-inline control-group">
                            <div class="col-md-8 offset-3 optButton">
                                <div align="center" class="btn-group w100">
                                    <button id="btnClear" type="button" class="btn btn-primary w-45"> <i class="fas fa-eraser"></i> Clear</button>
                                    <button id="btnPreview" type="button" value="Preview" class="btn btn-success w-55"><i class="fas fa-eye"></i> Preview</button>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>