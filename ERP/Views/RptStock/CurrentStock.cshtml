
@{
    ViewBag.Title = "Current Stock";
}

<link href="~/Content/Custom/Report/CurrentStock.css" rel="stylesheet" />
<script src="~/Scripts/Custom/Report/Stock/CurrentStock.js"></script>

<div class="page-inner w100">
    <div class="row">
        <div class="col-md-7 offset-2 text-right text-center">
            <div class="main-card card">
                <div class="card-header">
                    <div class="d-flex align-items-center">
                        <h4 class="card-title"> Current Stock</h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="col-md-12 form-horizontal">
                        <div class="form-group form-inline control-group">
                            <label class="col-md-3">Branch Name </label>
                            <div class="col-md-8">
                                <select id="cmbBranch" multiple="multiple" class="form-control input-full"></select>
                            </div>
                        </div>
                        <div class="form-group form-inline control-group">
                            <label class="col-md-3">Location </label>
                            <div class="col-md-8">
                                <select id="cmbstockType" class="form-control input-full"></select>
                            </div>
                        </div>

                        <div class="form-group form-inline control-group">
                            <label class="col-md-3">Stock Value As </label>
                            <div class="col-md-8">
                                <select id="cmbstockValueAs" class="form-control input-full">
                                    <option value="1">Purchase Rate</option>
                                    <option value="2">Selling Rate</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group form-inline control-group">
                            <label class="col-md-3">Category </label>
                            <div class="col-md-8">
                                <select id="cmbProductCategory" class="form-control input-full"></select>
                            </div>
                        </div>

                        <div class="form-group form-inline control-group">
                            <label class="col-md-3">Item Status </label>
                            <div class="col-md-8">
                                <select id="cmbitemStatus" class="form-control input-full" disabled="disabled">
                                    <option value="true"> Active Item</option>
                                    <option value="false"> InActive Item</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group form-inline control-group">
                            <label class="col-md-3">Batch Status </label>
                            <div class="col-md-8">
                                <select id="cmbbatchStatus" class="form-control input-full" disabled="disabled">
                                    <option value="true"> Active Batch</option>
                                    <option value="false"> InActive Batch</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group form-inline control-group">
                            <div class="offset-3 col-md-8">
                                <label class="containerChkbox">
                                    <input type="checkbox" id="chkIncludingZeroStock">
                                    <label class="checkmarkChkbox" for="chkIncludingZeroStock"></label>
                                    <span class="checkboxLbl"> Including Zero Stock</span>
                                </label>
                            </div>
                        </div>
                        <div class="form-group form-inline control-group">
                            <div class="offset-3 col-md-8">
                                <label class="containerChkbox">
                                    <input type="checkbox" id="ckbOnlyZeroStock">
                                    <label class="checkmarkChkbox" for="ckbOnlyZeroStock"></label>
                                    <span class="checkboxLbl"> Only Zero Stock</span>
                                </label>


                            </div>
                        </div>

                        <div class="form-group form-inline control-group">
                            <div class="col-md-8 offset-3 optButton">
                                <div align="center" class="btn-group w100">
                                    <button id="btnClear" type="button" class="btn btn-primary w-45"> <i class="fas fa-eraser"></i> Clear</button>
                                    <button id="btnPreview" type="button" value="Preview" class="btn btn-success w-55"><i class="fas fa-eye"></i> Preview</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>