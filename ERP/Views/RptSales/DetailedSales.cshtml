@using ERP.CSharpLib
@{
    ViewBag.Title = "Detailed Sales";
}
<link href="~/Content/Custom/Report/DetailedSales.css" rel="stylesheet" />
<script src="~/Scripts/Custom/Report/Sales/DetailedSales.js"></script>


<div class="page-inner w100">
    <div class="row">
        <div class="col-md-6 offset-2 text-right text-center">
            <div class="main-card card">
                <div class="card-header">
                    <div class="d-flex align-items-center">
                        <h4 class="card-title"> Detailed Sales </h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="col-md-12 form-horizontal">
                        <div class="form-group form-inline control-group">
                            <label class="col-md-3">Date From </label>
                            <div class="col-md-8">
                                <input type="text" id="dateFrom" autocomplete="off" class="form-control txtbox97" placeholder="MM/DD/YYYY" value="@UTCDateTime.BDDate().ToString("MM/dd/yyyy")" />
                                <span class="required">*</span>
                            </div>
                        </div>
                        <div class="form-group form-inline control-group">
                            <label class="col-md-3">Date To </label>
                            <div class="col-md-8">
                                <input type="text" id="dateTo" autocomplete="off" class="form-control txtbox97" placeholder="MM/DD/YYYY" value="@UTCDateTime.BDDate().ToString("MM/dd/yyyy")" />
                                <span class="required">*</span>
                            </div>
                        </div>
                        <div class="form-group form-inline control-group">
                            <label class="col-md-3">Branch Name </label>
                            <div class="col-md-8">
                                <select id="cmbBranch" multiple="multiple" class="form-control txtbox97"></select>
                            </div>
                        </div>
                        <div class="form-group form-inline control-group">
                            <label class="col-md-3">Category </label>
                            <div class="col-md-8">
                                <select id="cmbProductCategory" class="form-control txtbox97"></select>
                            </div>
                        </div>
                        <div class="form-group form-inline control-group">
                            <label class="col-md-3">Invoice No </label>
                            <div class="col-md-8">
                                <input type="text" id="invoiceNo" class="form-control txtbox97" />
                            </div>
                        </div>

                        <div class="form-group form-inline control-group">
                            <div class="offset-3 col-md-8">
                                <label class="containerChkbox">
                                    <input type="checkbox" id="ckbIsRelatedAllInvoice">
                                    <label class="checkmarkChkbox" for="ckbIsRelatedAllInvoice"></label>
                                    <span class="checkboxLbl">View Related Invoice</span>
                                </label>


                            </div>
                        </div>

                        <div class="form-group form-inline control-group">
                            <div class="col-md-8 offset-3 optButton">
                                <div align="center" class="btn-group w100">
                                    <button id="btnClear" type="button" class="btn btn-primary w-45"> <i class="fas fa-eraser"></i> Clear</button>
                                    <button id="btnPreview" type="button" value="Preview" class="btn btn-success w-55"><i class="fas fa-eye"></i> Preview</button>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>