
@model ERP.Models.POS.PosUomMaster
@{
    ViewBag.Title = "Unit Master";
}

<link href="~/Content/Custom/Pos/Setings/UnitMaster.css" rel="stylesheet" />
<script src="~/Scripts/Custom/Pos/Settings/UnitMaster.js"></script>

<div class="page-inner margin-top-15px">

    <div class="row">
        <div class="col-md-12">
            <div class="main-card card">
                <div class="card-header">
                    <div class="d-flex align-items-center">
                        <h4 class="card-title"> <i class="fas fa-user"></i> Unit Master </h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-5">
                            @using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "frmPost", @class = "form-horizontal" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                <div class="form-group form-inline control-group">
                                    <label class="col-md-4 itemLbl">Uom Code/Unit Name</label>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(m => m.UomCode, new { @class = "form-control txtbox97" })
                                        <span class="required">*</span>
                                        <span class="clsValidate">@Html.ValidationMessageFor(m => m.UomCode) </span>
                                    </div>
                                </div>

                                <div class="form-group form-inline control-group">
                                    <label class="col-md-4 itemLbl">Descriptin</label>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(m => m.UomDescription, new { @class = "form-control txtbox97" })
                                        <span class="required">*</span>
                                        <span class="clsValidate">@Html.ValidationMessageFor(m => m.UomDescription) </span>
                                    </div>
                                </div>

                                <div class="form-group form-inline control-group">
                                    <label class="col-md-4 itemLbl">Is Base Uom</label>
                                    <div class="col-md-8">
                                        <span class="checkbox-inline"> @Html.CheckBoxFor(m => m.IsBaseUom, new { @checked = "true", @readonly = "readonly" })</span>
                                    </div>
                                </div>

                            }
                            <div class="form-group form-inline control-group margin-top-15px">
                                <div class="col-md-10 offset-2">
                                    <div class="pull-right">
                                        <input type="button" id="btnSave" class="btn btn-success btn-sm" value="Save Change" />
                                        <input type="button" id="btnEdit" class="btn btn-warning btn-sm" value="Update" />
                                        <input type="button" id="btnClear" class="btn btn-primary btn-sm" value="Clear" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-7">
                            <table id="dTable" class="table table-bordered w100"></table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



